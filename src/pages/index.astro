    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#EAFF47" />
    <meta name="description" content="TWÏZZY TÄLK" />
    <link rel="manifest" href="/manifest.json" />
    <title>TWÏZZY TÄLK</title>
  </head>
  <body
    class="bg-black bg-[url('/images/BG-mobile.webp')] md:bg-[url('/images/BG.jpg')] bg-no-repeat bg-cover bg-top md:bg-center bg-scroll md:bg-fixed h-full w-full overscroll-contain flex flex-col justify-between items-center md:p-5 flex-nowrap text-white text-sm p-2 pb-16 md:pb-[unset] md:text-lg"
  >
    <img
      alt="Twizzy Talk logo"
      class="h-auto w-[60%] mt-5 md:mt-[unset] md:w-[60vw] select-none"
      src={Logo}
    />
    <Input client:only="react" />
    <Caption />
    <Spa />
  </body>
</html>
