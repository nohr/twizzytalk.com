      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/images/icon/favicon-16x16.png"
    />
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta
      name="msapplication-TileImage"
      content="/images/icon/ms-icon-144x144.png"
    />
    <meta property="og:title" content="TWÏZZY TÄLK" />
    <meta property="og:image" content="/images/opengraphimg.jpg" />
    <meta property="og:description" content="Type then kränk it" />
